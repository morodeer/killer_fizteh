@import 'foundation';
@mixin dblock {
  display: block;
  overflow: hidden;
}

html, body
{
	margin: 0;
	padding: 0;
}

html {
	font-size: 16px;
}

.fw
{
	margin-left: auto;
	margin-right: auto;
	@include dblock;
	max-width: 60em;
}


header
{
	@include dblock;
	width: 100%;
	padding-bottom: 0.4em;
	padding-top: 0.4em;
	background-image: url('<%=image_path('for_header.jpg')%>');
	/*height: 2em;*/
	a {
		font-family: "PT Sans";
		float: left;
		color: white;
		text-decoration: none;
		/*line-height: 2em;*/
		/*vertical-align: middle;*/
		padding-right: 0.3em;
		padding-left: 0.3em;
		&:hover {
			text-decoration: underline;
		}
	}

	.left_side {
		float: left;
	}

	.right_side {
		float: right;

	}
	margin: 0;
	#logo {
		font-size: 1.4em;

		@include dblock;
	}
}

#body
{
	.card {
		background-color: #ad0300;
		//@include radius(6px);
		box-shadow: rgba(0,0,0,0.6) 2px 2px 2px;
		//@include dblock;
		/*padding-left: 0.5em;*/
		/*padding-bottom: 0.5em;*/
		h4 {
			padding-left: 0.5em;
			color: white;
		  text-shadow: rgba(0,0,0,0.7) 2px 2px 2px;
		}

		.target {
			padding-left: 0.5em;
			color: white;
			text-shadow: rgba(0,0,0,0.7) 2px 2px 2px;

			font-size: 2em;
		}
	}

}

footer {
    display: block;
    text-align: center;
    color: rgba(0,0,0,0.2);
    margin-top: 3em;
}

