=render 'shared/flash'
#body
	.row
		%h2 Редактирование входных данных
		=form_for @user do |f|
			=f.label :login
			=f.text_field :login

			=f.label :password
			=f.password_field :password

			=f.label :password_confirmation
			=f.password_field :password_confirmation

			=f.hidden_field :id


			=f.submit 'Ок'